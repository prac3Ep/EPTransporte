<!DOCTYPE html>
<html lang="@(ViewBag.IdiomaActual ?? "es")">
<head>
    <link rel="icon" href="@Url.Content("~/imagen/logo_isotipo.png")" type="image/x-icon">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TransporteEP</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/iconos/css/all.min.css" />
    <!-- Hojas de estilo principales -->
    <link rel="stylesheet" href="~/Content/Site.css" />
    <style>
        :root {
            /* Colores modo claro (default) */
            --primary-color: #021649;
            --primary-dark: #021649;
            --secondary-color: #F13E53;
            --accent-color: #66C0F1;
            --light-bg: #F6F6F6;
            --text-dark: #161c40;
            --text-light: #ffffff;
            --bg-color: #ffffff;
            --card-bg: #ffffff;
            --sidebar-bg: #e8e8e8;
            --navbar-bg: var(--sidebar-bg);
            --border-color: #e0e0e0;
            --input-bg: #ffffff;
            --table-header-bg: #f8f9fa;
            --table-hover-bg: rgba(102, 192, 241, 0.1);
            --scrollbar-thumb: var(--primary-color);
            --scrollbar-track: #f1f1f1;
        }

        /* Modo oscuro */
        [data-theme="dark"] {
            --primary-color: #17496D;
            --primary-dark: #021649;
            --secondary-color: #F13E53;
            --accent-color: #1E82FC;
            --light-bg: #121212;
            --text-dark: #e0e0e0;
            --bg-color: #1e1e1e;
            --card-bg: #2d2d2d;
            --sidebar-bg: #121212;
            --navbar-bg: #121212;
            --border-color: #444444;
            --input-bg: #2d2d2d;
            --table-header-bg: #252525;
            --table-hover-bg: rgba(102, 192, 241, 0.2);
            --scrollbar-thumb: #66C0F1;
            --scrollbar-track: #2d2d2d;
        }


        .sidebar .dropdown-menu {
            background-color:var(--sidebar-bg);
            position: absolute !important;
            top: 0 !important;
            left: 100% !important;
            right: auto !important;
            margin-top: 0 !important;
            margin-left: 0 !important;
            min-width: 220px;
            transform: none !important;
            will-change: initial !important;
            display: none;
            border-radius: 0 4px 4px 4px;
        }

        .sidebar .dropdown.show .dropdown-menu {
            color: var(--text-dark) !important;
            display: block;
        }

        .sidebar .nav-item {
            color: var(--text-dark) !important;
            position: static !important;
        }

        .sidebar .dropdown {
            color: var(--text-dark) !important;
            position: relative !important;
        }

        .sidebar {
            color: var(--text-dark) !important;
            overflow: visible !important;
            z-index: 1000;
        }

            .sidebar .dropdown-menu {
                color: var(--text-dark) !important;
                box-shadow: 2px 2px 8px rgba(0,0,0,0.1);
                border: 1px solid #dee2e6;
            }

            .sidebar .dropdown-item {
                color: var(--text-dark) !important;
                padding: 8px 16px;
                transition: background-color 0.2s;
            }

                .sidebar .dropdown-item:hover {
                    color: var(--text-light) !important;
                    background-color: var(--primary-color) !important;
                }

                .sidebar .dropdown-item i {
                    width: 20px;
                    text-align: center;
                    margin-right: 8px;
                }
    </style>

    <!-- DataTables CSS -->
    <link href="@Url.Content("~/Content/DataTables/datatables.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/DataTables/dataTables.css")" rel="stylesheet" />

    <!-- Bundles de estilos -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

