@{
    ViewBag.Title = "Configuración";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h2 class="text-primary mb-4"><i class="fas fa-cog me-2"></i>Configuración</h2>

